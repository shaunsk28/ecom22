      {{#each products}}
      <div class="col-md-3 p-3">
        <div class="card" style="width:15rem; height:24rem;">
          <img class="card-img-top" src="/product-images/{{product.images.[0]}}.jpg" alt="Card image cap"
            style="height:12rem;">
          <div class="card-body">
            <h5 class="card-title">{{this.product.Name}}</h5>
            <p class="card-text">â‚¹{{this.product.Price}}</p>
            <p class="card-text">Quantity:{{this.quantity}}</p>
            <p class="card-text">{{this.Description}}</p>
          </div>

        </div>
      </div>

      {{/each}}
    </div>
  </div>
  </div>
</section>