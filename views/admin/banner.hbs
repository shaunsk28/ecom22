<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"></h4>
                        <span>
                            <a href="/admin/addBanner"><button style="width:180px ;margin-left:50px" type="button"
                                    class="btn btn-primary">Add Banner</button></a>
                        </span>
                        <div class="table-responsive">
                            <table id="productsTable" class="table mt-5">
                                <thead>
                                    <tr>

                                        <th scope="col">SubTitle</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each banner}}
                                    <tr>
                                        <td>{{this.subTitle}}</td>
                                        <td>{{this.title}}</td>
                                        <td>{{this.description}}</td>
                                        <td><img style="width: 50px; height: 50px;" src="/ban-images/{{this.image}}" alt=""></td>

                                        <td><a href="" class="btn btn-danger">EDIT</a></td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>