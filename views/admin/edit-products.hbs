<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-products/{{product._id}}" enctype="multipart/form-data" method="POST">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{product.Name}}">
                    {{!-- <input type="text" name="_id" class="form-control" value="{{product._id}}" hidden> --}}


                    <label for="">Category</label>
                    <select class="form-select" name="Category" aria-label="Default select example">
                        {{!-- <option>Select</option> --}}

                        <option>{{product.category}}</option>
                        {{#each category}}
                        <option>{{this.category}}</option>
                        {{/each}}
                    </select>

                    <label for="">Price</label>
                    <input type="text" name="Price" class="form-control" value="{{product.Price}}">

                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{product.Description}}">
                    <label for="">STOCK</label>
                    <input type="number" class="form-control item" name="Stock" value="{{product.Stock}}"  >

                    <label for="Image">Image</label>

                    <img src="/uploads/{{this.product.images.[0]}}" alt="" style="width: 100px; height:auto  "
                        id="imgView1" class="pt-3">
                    <input type="file" class="form-control" name="image1" onchange="viewImage1(event)" >


                    <img src="/uploads/{{this.product.images.[1]}}" alt="" style="width: 100px; height:auto  "
                        id="imgView2" class="pt-3">
                    <input type="file" class="form-control" name="image2" onchange="viewImage2(event)" >

                    <img src="/uploads/{{this.product.images.[2]}}" alt="" style="width: 100px; height:auto  "
                        id="imgView3" class="pt-3">
                    <input type="file" class="form-control" name="image3" onchange="viewImage3(event)" >



                    <img src="/uploads/{{this.product.images.[3]}}" alt="img" style="width: 100px; height:auto  "
                        id="imgView4" class="pt-3">
                    <input type="file" class="form-control" name="image4" onchange="viewImage4(event)" >



                    <input type="hidden" name="image1" value="{{this.product.images.[0]}}">
                    <input type="hidden" name="image2" value="{{this.product.images.[1]}}">
                    <input type="hidden" name="image3" value="{{this.product.images.[2]}}">
                    <input type="hidden" name="image4" value="{{this.product.images.[3]}}">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>

            </div>
        </div>
    </div>
</section>
<script>
  function viewImage1(event) {
    document.getElementById('imgView1').src = event.target = URL.createObjectURL(event.target.files[0])
  }
  function viewImage2(event) {
    document.getElementById('imgView2').src = event.target = URL.createObjectURL(event.target.files[0])
  }
  function viewImage3(event) {
    document.getElementById('imgView3').src = event.target = URL.createObjectURL(event.target.files[0])
  }

  function viewImage4(event) {
    document.getElementById('imgView4').src = event.target = URL.createObjectURL(event.target.files[0])
  }
 
</script>